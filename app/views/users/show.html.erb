<% provide(:title, @user.name) %>
<div>
  <table class="table table-bordered table-condensed user-table">
    <tr>
      <th>xxxx年xx月　時間管理表</th>
      <th>指定勤務開始時間　<%= @user.designated_work_start_time %><br>指定勤務終了時間　<%= @user.designated_work_end_time %></th>
      <th colspan="3">基本時間　<%= @user.basic_work_time %></th>
      <th>初日　00/00</th>
    </tr>
    <tr>
      <th>所属　<%= @user.affiliation.present? ? @user.affiliation : "未所属" %></th>
      <th>氏名　<%= @user.name %></th>
      <th>コード</th>
      <th><%= @user.employee_number %></th>
      <th>出勤日数　ｘ日</th>
      <th>締め　00/00</th>
    </tr>
  </table>
</div>